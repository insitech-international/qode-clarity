# Environment Configuration
CODE_CLARITY_ENVIRONMENT=development
CODE_CLARITY_DEBUG=true
CODE_CLARITY_LOG_LEVEL=INFO

# API Settings
CODE_CLARITY_HOST=127.0.0.1
CODE_CLARITY_PORT=8000
CODE_CLARITY_WORKERS_COUNT=1
CODE_CLARITY_RELOAD=true
CODE_CLARITY_API_LOCAL_BASE=http://127.0.0.1:8000
CODE_CLARITY_API_PROD_BASE=https://code-clarity.insitechinternational.com

# MongoDB Settings
CODE_CLARITY_DB_HOST=localhost
CODE_CLARITY_DB_PORT=27017
CODE_CLARITY_DB_BASE=code-clarity-db
CODE_CLARITY_DB_ECHO=false
CODE_CLARITY_DB_USER=
CODE_CLARITY_DB_PASS=

# Static Files Configuration
CODE_CLARITY_STATIC_TIMEOUT=5
CODE_CLARITY_STATIC_FILES_DIRECTORY=https://raw.githubusercontent.com/insitech-international/code-clarity/gh-pages/static/data

# GitHub Static Content (for production fallback)
CODE_CLARITY_GITHUB_OWNER=insitech-international
CODE_CLARITY_GITHUB_REPO=code-clarity
CODE_CLARITY_GITHUB_BRANCH=gh-pages

# CORS Configuration
CODE_CLARITY_ALLOWED_ORIGINS=http://127.0.0.1:8000,http://localhost:3000,http://localhost:3001,https://code-clarity.insitechinternational.com
